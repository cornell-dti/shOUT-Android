<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="250dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/resource_info_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resource_info_description_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/editTextSeparator"
        tools:ignore="Orientation" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/resource_info_url_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/website_icon_small" />

        <TextView
            android:id="@+id/resource_item_website_subtitle_text_view"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder_text"
            android:textAlignment="textStart"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/resource_info_separator_c"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/editTextSeparator"
        tools:ignore="Orientation" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/resource_info_directions_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/directions_icon_small" />

        <TextView
            android:id="@+id/resource_item_directions_subtitle_text_view"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="8dp"
            android:text="@string/placeholder_text"
            android:textAlignment="textStart"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/resource_info_separator_d"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/editTextSeparator"
        tools:ignore="Orientation" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/resource_info_email_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/email_icon_small" />

        <TextView
            android:id="@+id/resource_item_email_label_text_view"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="20dp"
            android:text="@string/placeholder_text"
            android:textAlignment="textStart"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/resource_info_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/editTextSeparator"
        tools:ignore="Orientation" />

    <ListView
        android:id="@+id/resource_info_phone_number_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" />

</LinearLayout>